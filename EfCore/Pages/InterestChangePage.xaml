<Page x:Class="EfCore.Pages.InterestChangePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EfCore.Pages"
      xmlns:validators="clr-namespace:EfCore.Validators"
      mc:Ignorable="d" 
      Title="InterestChangePage">

    <Grid>
        <StackPanel>
            <StackPanel Style="{StaticResource FormGroup}">
                <Label Content="Название *" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="NameTextBox" Style="{StaticResource ValidatableTextBox}">
                    <TextBox.Text>
                        <Binding Path="CurrentInterestGroup.Title" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:RequiredRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>

            <StackPanel Style="{StaticResource FormGroup}">
                <Label Content="Описание *" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="DescTextBox" Style="{StaticResource ValidatableTextBox}">
                    <TextBox.Text>
                        <Binding Path="CurrentInterestGroup.Description" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:RequiredRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>


            <StackPanel Style="{StaticResource ActionPanel}" HorizontalAlignment="Right">
                <Button Click="SaveButton_Click" Content="Сохранить" Style="{StaticResource PrimaryButton}"/>
                <Button Click="BackButton_Click" Content="Назад" Style="{StaticResource SecondaryButton}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

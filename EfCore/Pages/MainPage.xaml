<Page x:Class="EfCore.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EfCore.Pages"
      xmlns:services="clr-namespace:EfCore.Service"
      mc:Ignorable="d" 
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" >
            <TextBlock Text="Список пользователей" Style="{StaticResource PageTitle}"/>
            <Button Click="AddButton_Click" Content="Добавить" 
                    Style="{StaticResource PrimaryButton}"/>
            <Button Click="DelButton_Click" Content="Удалить" 
                    Style="{StaticResource DangerButton}"/>
            <Button Click="RolesButton_Click" Content="Роли" 
                    Style="{StaticResource SecondaryButton}"/>
            <Button Click="GroupButton_Click" Content="Группы" 
                    Style="{StaticResource SecondaryButton}"/>
            <Button Click="AddToGroupButton_Click" Content="Записаться в группу" 
                    Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
        
        <ListView Grid.Row="1" 
                  ItemsSource="{Binding Service.Users}"
                  MouseDoubleClick="EditUser_Click"
                  SelectedItem="{Binding SelectedUser}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource UserListItem}">
                        <StackPanel>
                            <TextBlock Text="{Binding Login}" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding Name}" Foreground="#666"/>
                            <TextBlock Text="{Binding Email}" Foreground="#666"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Роль: " Foreground="#999"/>
                                <TextBlock Text="{Binding Role.Title, FallbackValue='Пользователь'}" 
                                          FontWeight="SemiBold"/>
                            </StackPanel>
                            <TextBlock Text="{Binding CreatedAt, StringFormat='Создан: {0}'}" 
                                      Foreground="#999" FontSize="11"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
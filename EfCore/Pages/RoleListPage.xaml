<Page x:Class="EfCore.Pages.RoleListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EfCore.Pages"
      mc:Ignorable="d" 
      Title="Список ролей">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Список ролей" Style="{StaticResource PageTitle}"/>
            <Button Click="BackButton_Click" Content="Назад" 
                    Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
        
        <Border Grid.Row="1" Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="0,1,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Роли" 
                           Style="{StaticResource PageTitle}"
                           FontSize="16" Margin="10"/>

                <ListView Grid.Row="1" 
                          ItemsSource="{Binding Roles}"
                          SelectedItem="{Binding SelectedRole, Mode=TwoWay}"
                          SelectionChanged="ListView_SelectionChanged"
                          Style="{StaticResource UserListStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource UserListItem}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" Style="{StaticResource UserLoginText}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Пользователей: " Style="{StaticResource UserInfoText}"/>
                                        <TextBlock Text="{Binding Users.Count}" Style="{StaticResource UserInfoText}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
        
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" x:Name="UsersTitle" Text="Пользователи роли" 
                           Style="{StaticResource PageTitle}"
                           FontSize="16" Margin="10"/>

                <Border Grid.Row="1" 
                        Background="#F5F5F5"
                        Margin="10"
                        Padding="10">
                    <TextBlock x:Name="SelectedRoleInfo" Text="Выберите роль слева"/>
                </Border>

                <ListView Grid.Row="2" 
                          x:Name="RoleUsersListView"
                          ItemsSource="{Binding RoleUsers}"
                          Style="{StaticResource UserListStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource UserListItem}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Login}" Style="{StaticResource UserLoginText}"/>
                                    <TextBlock Text="{Binding Name}" Style="{StaticResource UserInfoText}"/>
                                    <TextBlock Text="{Binding Email}" Style="{StaticResource UserInfoText}"/>
                                    <TextBlock Text="{Binding CreatedAt, StringFormat='Создан: {0}'}" 
                                              Style="{StaticResource CreatedAtText}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
                <TextBlock Grid.Row="2" x:Name="NoUsersText"  Text="У роли нет пользователей" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
            </Grid>
        </Border>
    </Grid>
</Page>
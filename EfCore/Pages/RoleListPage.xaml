<Page x:Class="EfCore.Pages.RoleListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EfCore.Pages"
      xmlns:services="clr-namespace:EfCore.Service"
      mc:Ignorable="d" 
      Title="Список ролей">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Click="BackButton_Click" Content="Назад" Style="{StaticResource PrimaryButton}"/>
            <TextBlock Text="Список ролей" VerticalAlignment="Center" 
                      FontSize="16" FontWeight="Bold"/>
        </StackPanel>

        <ListView Grid.Row="1" 
                  ItemsSource="{Binding Roles}"
                  SelectedItem="{Binding SelectedRole}"
                  Margin="10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="{Binding Users.Count, StringFormat='Пользователей: {0}'}" 
                                          Foreground="#666"/>
                            </StackPanel>

                            <Button Grid.Column="1" 
                                    Content="Показать пользователей"
                                    Click="ShowUsersForRole"
                                    Tag="{Binding}"
                                    Margin="10,0,0,0"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>